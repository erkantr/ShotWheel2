<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_button_background_2"
    app:cardCornerRadius="25dp">

    <ImageView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/dialog_gradient" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:src="@drawable/dialog_gradient_linear" />

    <ImageView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:src="@drawable/dialog_gradient_2" />

    <ImageView
        android:id="@+id/view4"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:src="@drawable/dialog_gradient_linear_2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_close" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/dark_red_button"
            android:fontFamily="@font/roboto_regular"
            android:text="Başlıyoruz..."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="Sıranın kimde olduğu isimlerin üstündeki renklerden bellidir.
\n\nÇarkı döndürmek için üzerine bir kere dokunmak yeterlidir.
\n\nHer kategori süreli ve puanlıdır.
\n\nİyi eğlenceler...\n" />

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Hazırım..."
            android:textAllCaps="false"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:background="@drawable/blue_button"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>